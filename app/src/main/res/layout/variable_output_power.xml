<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dbcalculator.VariableOutputPower">

    <TextView
        android:id="@+id/watsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wattsText"
        android:textColor="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/wattsEditText"
        app:layout_constraintStart_toStartOf="@+id/milliWatsText" />

    <TextView
        android:id="@+id/milliWatsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/milli_watts_ext"
        android:textColor="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/milliWattsEditText"
        app:layout_constraintStart_toStartOf="@+id/dbText" />

    <TextView
        android:id="@+id/dbText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/db_text"
        android:textColor="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/dbEditText"
        app:layout_constraintStart_toStartOf="@+id/dBmText" />

    <TextView
        android:id="@+id/dBmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/dbm_text"
        android:textColor="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/dbmEditText"
        app:layout_constraintEnd_toStartOf="@+id/dbmEditText" />

    <EditText
        android:id="@+id/wattsEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/watts_hint"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/wButton"
        app:layout_constraintEnd_toStartOf="@+id/wButton" />

    <EditText
        android:id="@+id/milliWattsEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/milli_watts_hint"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/mwButton"
        app:layout_constraintEnd_toStartOf="@+id/mwButton" />

    <EditText
        android:id="@+id/dbEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/db_hint"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/dbButton"
        app:layout_constraintEnd_toStartOf="@+id/dbButton" />

    <EditText
        android:id="@+id/dbmEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/dbm_hint"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/dbmButton"
        app:layout_constraintEnd_toStartOf="@+id/dbmButton" />

    <EditText
        android:id="@+id/outputPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/output_power_hint"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/button_convert"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outputPower" />

    <Button
        android:id="@+id/mwButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/button_convert"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/wButton"
        app:layout_constraintTop_toBottomOf="@+id/wButton" />

    <Button
        android:id="@+id/dbButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/button_convert"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/mwButton"
        app:layout_constraintTop_toBottomOf="@+id/mwButton" />

    <Button
        android:id="@+id/dbmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/button_convert"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/dbButton"
        app:layout_constraintTop_toBottomOf="@+id/dbButton" />

    <Button
        android:id="@+id/resetPowerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/button_reset"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/dbmButton"
        app:layout_constraintTop_toBottomOf="@+id/dbmButton" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/outputPower"
        app:layout_constraintTop_toTopOf="@+id/outputPower" />

</androidx.constraintlayout.widget.ConstraintLayout>